@model Storyteller.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

@section topCSS{
    <link href="~/css/HomePage.css" rel="stylesheet" />
    <link href="~/css/Hearder/StyleSheet_hearder.css" rel="stylesheet" />
}

<partial name="_HearderPartial" />

<div class="container" id="userInfo">
    <div class="row">
        <div class="col-8">
            <h5>
                哈囉，{{UserName}}
                <span style="display: inline; color: #70CDB8;">></span> 
                    <span id="AchievementName" class="badge badge-info"></span>
            </h5>
        </div>
        <div class="col-4">
            <img v-bind:src="UserImg" alt="">
        </div>
    </div>
    <div class="row" id="btnrow">
        <div class="col">
            <button type="button" class="btn">
                <div class="btn-div">
                    <i class="far fa-star"></i>
                </div>
                <span>作品</span>
            </button>
            <button type="button" class="btn">
                <div class="btn-div">
                    <i class="fas fa-crown"></i>
                </div>
                <span>成就</span>
            </button>
            <button type="button" class="btn">
                <div class="btn-div">
                    <i class="fas fa-pencil-alt"></i>
                </div>
                <span>創作</span>
            </button>
        </div>
    </div>
</div>

<div class="container" id="script">
    <div class="row">
        <div class="col">
            <!-- Swiper -->
            <div class="swiper-container">
                <div class="swiper-wrapper">
                    @foreach (var item in Model.HomeScriptCategory)
                    {
                        <div class="swiper-slide">
                            <img src="@item.ScriptCategoryUrl" alt="Alternate Text" id="@item.ScriptCategoryId"/>
                            @if (item.ScriptCategoryId == 0)
                            {
                                <span class="sp" id="@item.ScriptCategoryId">戀愛</span>
                            }
                            else if (item.ScriptCategoryId == 1)
                            {
                                <span class="sp" id="@item.ScriptCategoryId">搞笑</span>
                            }
                            else if (item.ScriptCategoryId == 2)
                            {
                                <span class="sp" id="@item.ScriptCategoryId">恐怖</span>
                            }
                        </div>
                    }
                </div>
                <!-- Add Pagination -->
                <div class="swiper-pagination"></div>
            </div>
        </div>
    </div>
</div>

<div class="container" id="newScript">
    <div class="row">
        <div class="col">
            <h5>新劇本上架！</h5>
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active" style="background-color: #70CDB8;"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1" style="background-color: #70CDB8;"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2" style="background-color: #70CDB8;"></li>
                </ol>
                <div class="carousel-inner">
                    @foreach (var item in Model.NewScripts)
                    {
                        <div class="carousel-item active">
                            <img src="@item.ImgUrl" class="d-block w-100" alt="...">
                        </div>
                    }
                    @*<div class="carousel-item active">
                            <img src="./beanfun2.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="./beanfun2.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="./beanfun3.jpg" class="d-block w-100" alt="...">
                        </div>*@
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container" id="top10Player">
    <div class="row">
        <div class="col-8">
            <h5>本周Top 10玩家</h5>
        </div>
        <div class="col-4">
            <!-- <span>名人榜 ></span> -->
            <a href="">名人榜 ></a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <!-- Swiper -->
            <div class="swiper-container">
                <div class="swiper-wrapper">
                    @foreach (var item in Model.TopUser)
                    {
                        <div class="swiper-slide">
                            <img src="@item.UserImg" alt="Alternate Text" />
                            <span>@item.UserName</span>
                        </div>
                    }
                </div>
                <!-- Add Pagination -->
                <!-- <div class="swiper-pagination"></div> -->
            </div>
        </div>
    </div>
</div>

<div class="container" id="top10Creation">
    <div class="row">
        <div class="col-8">
            <h5>本周Top 10創作</h5>
        </div>
        <div class="col-4">
            <!-- <span>展館 ></span> -->
            <a href="">展館 ></a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <!-- Swiper -->
            <div class="swiper-container">
                <div class="swiper-wrapper">
                    @foreach (var item in Model.TopScript)
                    {
                        <div class="swiper-slide">
                            <img src="@item.ScriptUrl" alt="Alternate Text" />
                            <span><i class="fas fa-heart"></i> @item.CreationBeenLikedCount</span>
                        </div>
                    }
                </div>
                <!-- Add Pagination -->
                <!-- <div class="swiper-pagination"></div> -->
            </div>
        </div>
    </div>
</div>

<div class="container-fluid containerfooter" id="indexFooter">
    <div class="row">
        <div class="col">
            @*<a asp-controller="GameRoom" asp-action="UserPairing">*@
                <i class="fas fa-angle-double-up"></i>
                <span>Top</span>
            @*</a>*@
        </div>
    </div>
</div>

@section endJS{
    <!-- Swiper JS -->
    <script src="https://unpkg.com/swiper/swiper-bundle.js"></script>
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    <script src="~/js/HomePage/HomePage.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://beangostg.blob.core.windows.net/beango-static-stg/sdk/beango_stg.min.js"></script>
    <script src="~/js/BeanfunSDK/BeanfunSDK.js"></script>
}